@{
    var isAuthenticated = User.Identity.IsAuthenticated;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="keywords" content="Site keywords here">
    <meta name="description" content="">
    <meta name='copyright' content=''>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Phongkham</title>
    <!-- Favicon -->
    <link rel="icon" href="~/Customer/img/favicon.png">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap" rel="stylesheet">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Bootstrap CSS -->
    <link href="~/customer/css/animate.min.css" rel="stylesheet" />
    <link href="~/customer/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/customer/css/datepicker.css" rel="stylesheet" />
    <link href="~/customer/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/customer/css/icofont.css" rel="stylesheet" />
    <link href="~/customer/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/customer/css/nice-select.css" rel="stylesheet" />
    <link href="~/customer/css/normalize.css" rel="stylesheet" />
    <link href="~/customer/css/owl-carousel.css" rel="stylesheet" />
    <link href="~/customer/css/responsive.css" rel="stylesheet" />
    <link href="~/customer/css/slicknav.min.css" rel="stylesheet" />
    <link href="~/customer/css/style.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <style>
        .header1 {
            position: fixed; /* Cố định header */
            top: 0;
            width: 100%; /* Chiếm toàn bộ chiều rộng trang */
            z-index: 1000;
        }

        .header-inner {
            background-image: url('/images/header.png'); /* Đường dẫn đến hình nền */
            background-repeat: no-repeat; /* Không lặp lại hình nền */
            background-position: center center; /* Đặt hình nền ở giữa */
            background-attachment: fixed; /* Giữ hình nền cố định khi cuộn */
            background-size: cover; /* Đảm bảo hình ảnh phủ đầy không gian */
            padding: 20px 0;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        /* Thiết lập cho logo */
        .logo img {
            max-height: 50px;
        }
        /* Thiết lập cho nút đăng nhập và biểu tượng người dùng */
        .get-quote {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 2px;
        }

            .get-quote .btn, .get-quote .btn-link {
                color: #fff;
                background-color: #2a6592;
                border: none;
                padding: 10px 15px;
                border-radius: 5px;
                text-decoration: none;
                transition: background-color 0.3s ease;
            }

                .get-quote .btn:hover, .get-quote .btn-link:hover {
                    background-color: #1f4d72;
                }

            .get-quote i {
                color: #fff;
            }

            /* Thiết lập cho khung chứa tên người dùng và nút đăng xuất */
            .get-quote > div {
                display: flex;
                align-items: center;
                gap: 10px;
            }

        .nav.menu > li {
            margin-right: 0; /* Xóa khoảng cách giữa các mục menu */
        }

            /* Đảm bảo không có khoảng trống không mong muốn giữa các mục menu */
            .nav.menu > li + li {
                margin-left: 5px;
            }

    </style>
</head>

<body>
    <!-- Preloader -->
    <div class="preloader">
        <div class="loader">
            <div class="loader-outter"></div>
            <div class="loader-inner"></div>

            <div class="indicator">
                <svg width="16px" height="12px">
                    <polyline id="back" points="1 6 4 6 6 11 10 1 12 6 15 6"></polyline>
                    <polyline id="front" points="1 6 4 6 6 11 10 1 12 6 15 6"></polyline>
                </svg>
            </div>
        </div>
    </div>
    <!-- End Preloader -->
    <!-- Header Area -->
    <header class="header1 mb-4">
        <!-- Header Inner -->
        <div class="header-inner">
            <div class="container">
                <div class="inner">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-12">
                            <!-- Start Logo -->
                            <div class="logo">
                                <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Customer/img/logo.png" alt="#"></a>
                            </div>
                            <!-- End Logo -->
                            <!-- Mobile Nav -->
                            <div class="mobile-nav"></div>
                            <!-- End Mobile Nav -->
                        </div>
                        <div class="col-lg-7 col-md-9 col-12">
                            <!-- Main Menu -->
                            <div class="main-menu">
                                <nav class="navigation">
                                    <ul class="nav menu">
                                        <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                                            <a class="nav-link" asp-area="Patient" asp-controller="Home" asp-action="Index">Home</a>
                                        </li>
                                        <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Danglich" ? "active" : "")">
                                            <a class="nav-link" asp-area="Patient" asp-controller="Danglich" asp-action="Index">Lịch đặt</a>
                                        </li>
                                        @if (isAuthenticated)
                                        {
                                            <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "IndexLK" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                                                <a class="nav-link" asp-area="Patient" asp-controller="Home" asp-action="IndexLK">Lịch khám</a>
                                            </li>
                                        }
                                        <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "_Menu" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                                            @await Html.PartialAsync("~/Views/Shared/_Menu.cshtml", ViewData["LoaiTinTuc"])
                                        </li>
                                        <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "DetailDC" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                                            <a href="@Url.Action("DetailDC", "Home")" class="nav-link">Địa chỉ</a>
                                        </li>
                                        <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "dichVu1" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                                            <a class="nav-link" asp-area="Patient" asp-controller="Home" asp-action="dichVu1">Dịch vụ</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                            <!--/ End Main Menu -->
                        </div>
                        <div class="col-lg-2 col-12">
                            <div class="get-quote">
                                @{
                                    if (User.Identity.IsAuthenticated)
                                    {
                                        <div>
                                            <span>@User.Identity.Name</span>
                                            <a class="btn btn-link" asp-area="Identity" asp-page="/Account/Manage/Index">
                                                <i class="fas fa-user"></i>
                                            </a>
                                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" style="display: inline;">
                                                <a href="#" class="btn btn-link" onclick="this.closest('form').submit();return false;">
                                                    <i class="fas fa-sign-out-alt"></i>
                                                </a>
                                            </form>
                                        </div>
                                    }
                                    else
                                    {
                                        <a href="~/Identity/Account/Login" class="btn" onclick="toggleMainMenuVisibility();">Đăng nhập</a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ End Header Inner -->
    </header>
    <!-- End Header Area -->
    <div class="container1">
        <main role="main" class="pb-3" style="padding-top:80px;background: linear-gradient(181deg, #d3f7fd, #d1e4d9); font-family: 'Arial', sans-serif;  ">
            @RenderBody()
        </main>
    </div>
    <!--/ End Feautes -->
    <!-- Start Fun-facts -->
    <!-- Footer Area -->
    <footer id="footer" class="footer">
        <!-- Footer Top -->
        <div class="footer-top">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-3 col-md-6 col-12">
                        <div class="single-footer">
                            <h2>Về chúng tôi</h2>
                            <p>Chào mừng bạn đến với phòng khám nha khoa của chúng tôi! Với đội ngũ bác sĩ chuyên nghiệp, tận tâm và trang thiết bị hiện đại, chúng tôi cam kết mang đến cho bạn nụ cười rạng rỡ và sức khỏe răng miệng tốt nhất.</p>
                            <!-- Social -->
                            <ul class="social">
                                <li><a href="https://www.facebook.com/duy.nguyennhat.7547031/"><i class="icofont-facebook"></i></a></li>
                                <li><a href="#"><i class="icofont-google-plus"></i></a></li>
                                <li><a href="#"><i class="icofont-twitter"></i></a></li>
                                <li><a href="#"><i class="icofont-vimeo"></i></a></li>
                                <li><a href="#"><i class="icofont-pinterest"></i></a></li>
                            </ul>
                            <!-- End Social -->
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-12">
                        <div class="single-footer">
                            <h2>Giờ mở</h2>
                            <p>Khung giờ hoạt động trong tuần</p>
                            <ul class="time-sidual">
                                <li class="day">Thứ hai - Thứ sáu <span>8.00-20.00</span></li>
                                <li class="day">Thứ bảy <span>9.00-18.30</span></li>
                                <li class="day">Thứ hai - Thứ năm <span>9.00-15.00</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ End Footer Top -->
        <!-- Copyright -->
        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-12">
                        <div class="copyright-content">
                            <p>© HUTECH 2024 | All Rights Reserved by <a href="https://www.hutech.edu.vn/" target="_blank">hutech.edu.vn</a> </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ End Copyright -->
    </footer>
    <!--/ End Footer Area -->
    <!-- jquery Migrate JS -->
    <script src="~/Customer/js/slicknav.min.js"></script>
    <script src="~/customer/js/jquery.min.js"></script>
    <script src="~/customer/js/bootstrap-datepicker.js"></script>
    <script src="~/customer/js/colors.js"></script>
    <script src="~/customer/js/easing.js"></script>
    <script src="~/customer/js/popper.min.js"></script>
    <script src="~/customer/js/bootstrap.min.js"></script>
    <script src="~/customer/js/gmaps.min.js"></script>
    <script src="~/customer/js/jquery-migrate-3.0.0.js"></script>
    <script src="~/customer/js/jquery-ui.min.js"></script>
    <script src="~/customer/js/jquery.counterup.min.js"></script>
    <script src="~/customer/js/jquery.magnific-popup.min.js"></script>
    <script src="~/customer/js/jquery.nav.js"></script>
    <script src="~/customer/js/jquery.scrollup.min.js"></script>
    <script src="~/customer/js/main.js"></script>
    <script src="~/customer/js/map-active.js"></script>
    <script src="~/customer/js/niceselect.js"></script>
    <script src="~/customer/js/owl-carousel.js"></script>
    <script src="~/customer/js/steller.js"></script>
    <script src="~/customer/js/tilt.jquery.min.js"></script>
    <script src="~/customer/js/wow.min.js"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <!-- Các Scripts khác nếu cần -->
    @RenderSection("Scripts", required: false)

</body>
</html>