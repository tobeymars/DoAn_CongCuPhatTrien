@model Phongkham.Models.ApplicationUser

@{
    ViewBag.Title = "Delete User";
    Layout = "~/Views/Shared/_AdLayout.cshtml";
}

<h2>Khóa tài khoản người dùng</h2>

<h3>Bạn có chắc muốn khóa tài khoản này không?</h3>
<div>
    <h4>@Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>


    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Khóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
