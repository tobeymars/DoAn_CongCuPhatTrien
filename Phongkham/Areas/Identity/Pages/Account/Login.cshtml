@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LayoutVL.cshtml";
}

<div class="container1">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card1 mt-5 shadow-lg">
                <div class="card-header1 text-center">
                    <h3 class="text-white1">@ViewData["Title"]</h3>
                </div>
                <img src="/images/rang.png" class="top-right-image" alt="Logo">
                <div class="card-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group floating-label mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder=" " required />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group floating-label mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder=" " required />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input asp-for="Input.RememberMe" class="form-check-input" id="rememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label" style="padding-left: 0.25rem; color:white" for="rememberMe">Remember Me</label>
                        </div>
                        <div class="d-grid mb-3">
                            <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
                        </div>
                    </form>

                    <div class="d-grid mb-3">
                        <form id="external-login" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <button type="submit" class="btn-google" name="provider" value="Google" title="Log in using your Google account">Google</button>
                        </form>
                    </div>

                    <div class="mt-3 text-center" style="color:white">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>  |
                        <a asp-page="./RegisterWithoutAdmin" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                    </div>
                    <div class="mt-2 text-center" style="color:white">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .top-right-image {
        position: absolute;
        top: -25px;
        right: 10px;
        width: 150px; /* Chỉnh kích thước hình ảnh */
        height: 150px;
        pointer-events: none; /* Tắt hover cho hình ảnh, đảm bảo không bị ảnh hưởng bởi các hiệu ứng */
        z-index: 10; /* Đảm bảo hình ảnh luôn nằm trên các phần tử khác */
    }

    .btn-primary {
        background-color: #28a745; /* Màu xanh cho nút Lưu */
        border: none; /* Xóa viền */
        transition: background-color 0.3s, transform 0.2s; /* Hiệu ứng cho nút */
    }

        .btn-primary:hover {
            background-color: #218838; /* Màu nút khi hover */
            transform: scale(1.05); /* Tăng kích thước nút khi hover */
        }

    .btn-google {
        background-color: #db4437;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        text-align: center;
        display: inline-block;
        cursor: pointer;
        transition: background-color 0.3s, box-shadow 0.3s;
    }

        .btn-google:hover {
            background-color: #c23321;
            transform: scale(1.05);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        .btn-google:active {
            background-color: #a72819;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2) inset;
        }

    .card1 {
        border-radius: 15px;
        background: linear-gradient(143deg, #00c2ff 20%, #414345f2 100%); /* Gradient từ màu hồng nhạt sang màu hồng phấn */
        padding: 2rem; /* Thêm padding cho card */
        transition: transform 0.3s, box-shadow 0.3s; /* Hiệu ứng hover */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Đổ bóng mờ */
        position: relative; /* Để các phần tử con có thể sử dụng z-index */
    }

        .card1:hover {
            transform: translateY(-5px); /* Nâng thẻ lên khi hover */
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2); /* Đổ bóng sâu hơn khi hover */
        }

    .card-header1 {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        background: linear-gradient(135deg, #6a11cb, #2575fc); /* Gradient background */
        padding: 20px; /* Thêm khoảng cách cho phần header */
    }

    .text-white1 {
        font-weight: bold; /* Thêm trọng lượng cho tiêu đề */
        font-size: 1.5rem; /* Tăng kích thước chữ cho tiêu đề */
    }

    .form-check {
        display: flex; /* Sử dụng flexbox để căn chỉnh checkbox */
        align-items: center; /* Căn giữa theo chiều dọc */
        padding-left: 20px;
    }

    .container1 {
        background-image: url('/images/bglog.jpg'); /* Đường dẫn đến hình nền */
        background-repeat: no-repeat; /* Không lặp lại hình nền */
        background-position: center center; /* Đặt hình nền ở giữa */
        background-attachment: fixed; /* Giữ hình nền cố định khi cuộn */
        background-size: cover; /* Đảm bảo hình ảnh phủ đầy không gian */
        height: 100vh; /* Chiều cao 100% viewport */
    }

    .floating-label {
        position: relative;
        margin-bottom: 1.5rem;
    }

        .floating-label input {
            width: 100%;
            padding: 1.2rem 1rem 0.5rem;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

            .floating-label input:focus {
                border-color: #6a11cb; /* Thay đổi màu viền khi focus */
                box-shadow: 0 0 5px rgba(106, 17, 203, 0.5); /* Hiệu ứng đổ bóng khi focus */
                outline: none;
            }

        .floating-label label {
            position: absolute;
            top: 50%;
            left: 1rem;
            transform: translateY(-50%);
            padding: 0 0.5rem;
            color: #000000;
            pointer-events: none;
            transition: all 0.3s;
        }

        .floating-label input:focus + label,
        .floating-label input:not(:placeholder-shown) + label {
            top: 0;
            left: 0.75rem;
            font-size: 0.75rem;
            color: #000000;
            background: linear-gradient(178deg, #00c2ff, #fefefef2);
            padding: 0 0.25rem;
        }

        .floating-label span {
            position: absolute;
            bottom: -1.5rem;
            left: 1rem;
            font-size: 0.875rem;
            color: #dc3545;
        }
</style>
