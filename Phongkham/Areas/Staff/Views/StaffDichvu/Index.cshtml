@model IEnumerable<Phongkham.Models.dichvu>

@{
    ViewData["Title"] = "Danh Sách Dịch Vụ";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Danh Sách Dịch Vụ</h2>

    <div class="text-right mb-4" style="padding-left:750px">
        <a class="btn btn-success" href="@Url.Action("Create", "StaffDichVu")">
            <i class="fas fa-plus-circle"></i> Tạo Dịch Vụ Mới
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">Chưa có dịch vụ nào.</div>
            }
            else
            {
                <table class="table table-hover table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Tên Dịch Vụ</th>
                            <th>Mô Tả</th>
                            <th>Hình ảnh</th>
                            <th>Giá</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ten</td>
                                <td>@item.Description</td>
                                <td><img src="@item.ImageUrl" alt="Image" style="max-width: 100px;" /></td>
                                <td>@item.Price.ToString("#,0")</td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Thao Tác">
                                        <a class="btn btn-warning" href="@Url.Action("Edit", "StaffDichVu", new { id = item.Id })">
                                            <i class="fas fa-edit"></i> Chỉnh Sửa
                                        </a>
                                        <a href="@Url.Action("Delete", "StaffDichVu", new { id = item.Id })" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa dịch vụ này?');">
                                            <i class="fas fa-trash-alt"></i> Xóa
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

