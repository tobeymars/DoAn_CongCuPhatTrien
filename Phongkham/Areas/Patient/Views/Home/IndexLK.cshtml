@{
    ViewData["Title"] = "Danh Sách Lịch Khám Của Tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4 text-primary">Danh Sách Lịch Khám</h2>

    <div class="card shadow-lg border-0">
        <div class="card-body">
            @if (ViewData["LichKhams"] == null || !((IEnumerable<dynamic>)ViewData["LichKhams"]).Any())
            {
                <div class="alert alert-info text-center">Chưa có lịch khám.</div>
            }
            else
            {
                var lichKhams = ViewData["LichKhams"] as IEnumerable<dynamic>;
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Tên Nha sĩ</th>
                                <th>Ngày Khám</th>
                                <th>Giờ Khám</th>
                                <th>Phòng Khám</th>
                                <th>Số Điện Thoại</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in lichKhams)
                            {
                                <tr>
                                    <td>@item.TenNhaSi</td>
                                    <td>@item.LichKhamNgay</td>
                                    <td>@item.LichKhamGio</td>
                                    <td>@item.PhongKham</td>
                                    <td>@item.LichKhamPhone</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
        border: none;
    }

    .table {
        margin: 0;
        font-size: 1.1em;
        border-radius: 10px;
    }

        .table th, .table td {
            vertical-align: middle;
            padding: 15px;
        }

    .table-hover tbody tr:hover {
        background-color: #f0f8ff;
        transition: background-color 0.3s ease;
    }

    .thead-dark th {
        background-color: #343a40;
        color: white;
        text-align: center;
    }

    h2 {
        font-size: 36px;
        font-weight: bold;
        color: #007bff;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }

    .alert {
        border-radius: 8px;
        font-size: 1.2em;
    }
</style>
