@model IEnumerable<Phongkham.Models.dichvu>
@{
    ViewData["Title"] = "dichVu1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Định dạng chung cho bảng */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #ffffff;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1); /* Thêm bóng đổ cho bảng */
    }

        /* Định dạng cho các tiêu đề cột */
        .table th {
            padding: 12px 20px;
            background-color: #4CAF50; /* Màu nền xanh lá */
            color: #ffffff;
            text-align: left;
            font-size: 16px;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-right: 1px solid #ddd; /* Thêm viền phân chia các cột */
        }

        /* Định dạng cho các ô dữ liệu */
        .table td {
            padding: 12px 20px;
            border-bottom: 1px solid #ddd;
            border-right: 1px solid #ddd; /* Thêm viền phân chia cột */
            text-align: left;
            vertical-align: middle;
            font-size: 14px;
        }

        /* Hiệu ứng hover khi rê chuột qua dòng */
        .table tr:hover {
            background-color: #f1f1f1; /* Chỉnh màu nền khi rê chuột */
            cursor: pointer;
        }

        /* Cột mô tả - cắt ngắn và thêm dấu '...' nếu quá dài */
        .table td.Description {
            max-width: 300px; /* Chiều rộng tối đa của mô tả */
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis; /* Thêm dấu '...' nếu mô tả quá dài */
        }

        /* Cột giá - căn phải và làm nổi bật */
        .table td:last-child {
            text-align: right;
            font-weight: bold;
            color: #4CAF50; /* Màu xanh lá cho giá */
        }

        /* Chỉnh màu cho các dòng chẵn và lẻ */
        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tr:nth-child(odd) {
            background-color: #ffffff;
        }

        /* Định dạng khi không có dữ liệu */
        .table td.no-data {
            text-align: center;
            color: #888;
            font-style: italic;
        }
</style>
<h1 style="text-align:center">@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Mô tả</th>
            <th>Giá</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.ten</td>
                    <td class="Description">@service.Description</td>
                    <td>@service.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="no-data">Không có dịch vụ nào</td>
            </tr>
        }
    </tbody>
</table>

