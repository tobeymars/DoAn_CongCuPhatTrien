@model Phongkham.Models.lichKham

@{
    ViewData["Title"] = "Xóa Lịch Khám";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-danger">@ViewData["Title"]</h1>

<div class="card my-4 shadow-sm">
    <div class="card-body">
        <h4 class="card-title text-center text-primary">Xác nhận xóa lịch khám</h4>
        <hr />
        <div class="mb-3" style="padding-left:600px;">
            <strong>Ngày đặt:</strong> <span>@Model.NgayDat.ToString("dd/MM/yyyy")</span>
        </div>
        <div class="mb-3" style="padding-left:600px;">
            <strong>Khung giờ:</strong> <span>@Model.KhungGio?.TimeSlot</span>
        </div>
        <div class="mb-3" style="padding-left:600px;">
            <strong>Điện thoại:</strong> <span>@Model.phone</span>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center">
    <form asp-action="Delete" method="post" class="mr-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger px-4">Xóa</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary px-4" style="color: white">Hủy</a>
</div>
